<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>

      <tr>
        <td>
      <%= form_for(record, :remote => true) do |form| %>
        <%= form.button("+", {:value=>"-"}) %>
        <%= form.text_field :weight %>
        <%= form.button("+", {:value=>"+"}) %>
        <%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
      <% end %>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path %>
