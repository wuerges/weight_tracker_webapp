<p id="notice"><%= notice %></p>

<h1>Records</h1>

<script>
  function change(par) {
    var field = $("#record_weight");
    var num = +field.val() + par
    field.val(num.toFixed(1));
  }
</script>

<div class="field">
  <%= form_for(@record, :remote => true) do |form| %>

  <%= button_tag "-", onclick: "change(-0.1)", type: :button %>
  <%= form.text_field :weight %>
  <%= button_tag "+", onclick: "change(0.1)", type: :button %>
  <%= form.button "save", {:value=>"submit"} %>

  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="record_table_0">
    <% @records.each do |record| %>
      <%= render 'item', record: record %>
    <% end %>
  </tbody>
</table>

<br>
